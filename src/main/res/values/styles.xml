<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <!-- The main signup theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.MainSignup" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- The login theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Login">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBar</item>
    </style>

    <!-- The login theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.SignupWithEmail">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!-- The reset password theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.ResetPassword">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!-- The Action bar theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>
